<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Tailwind CDN -->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <nav class="bg-white border-gray-200 bg-zinc-900">
      <div
        class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
          <img
            src="https://flowbite.com/docs/images/logo.svg"
            class="h-8"
            alt="Flowbite Logo" />
          >
        </a>

        <div class="hidden w-full md:block md:w-auto" id="navbar-default">
          <ul
            class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 border-zinc-900">
            <li>
              <a
                href="/"
                class="block py-2 px-3 text-white bg-zinc-900 rounded md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500"
                aria-current="page">
                Home
              </a>
            </li>
            <li>
              <a
                href="/read"
                class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">
                Show Users
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="w-full h-screen bg-zinc-900 p-10 text-white text-center">
      <h1 class="text-3xl tracking-tighter mb-3 mt-5 text-center">
        Create User
      </h1>
      <form action="/create" method="post">
        <input
          class="px-5 py-3 m-6 border-2 border-zinc-500 outline-none bg-transparent rounded-lg"
          type="text"
          name="name"
          placeholder="Name" />
        <input
          class="px-5 py-3 m-6 border-2 border-zinc-500 outline-none bg-transparent rounded-lg"
          type="text"
          name="email"
          placeholder="E-mail" />
        <input
          class="px-5 py-3 m-6 border-2 border-zinc-500 outline-none bg-transparent rounded-lg"
          type="text"
          name="image"
          placeholder="Image URL" />
        <input
          class="px-5 py-3 m-6 bg-blue-500 rounded-lg"
          type="submit"
          value="Create User" />
      </form>
    </div>
  </body>
</html>
